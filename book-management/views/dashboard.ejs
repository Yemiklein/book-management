                <ul class="nav navbar-nav navbar-nav-first">
                    <li><a href="#top" class="smoothScroll">Home</a></li>
                    <li><a href="#books" class="smoothScroll">View Your books</a></li>
                    <li><a href="/users/addnew" class="smoothScroll">Add New books</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#"><i class="fa fa-user"></i><b>
                            <%=`Welcome ${record.firstname}`%>
