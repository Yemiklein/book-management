                    <li>
                        <a href="/users/logout"> <i class="fa fa-sign-out" aria-hidden="true"></i>Log out</a>
                    </li>

                </ul>
            </div>

        </div>
    </section>


    <!-- HOME -->
    <section id="home">
        <div class="row">

            <div class="owl-carousel owl-theme home-slider">
                <div class="item item-first">
                    <div class="caption">
                        <div class="container">
                            <div class="col-md-6 col-sm-12">
                                <h1>Yemrad Book Management Hub</h1>
                                <h3>Our online books are designed to fit in your industry supporting all-round with latest technologies.</h3>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="item item-second">
                    <div class="caption">
                        <div class="container">
                            <div class="col-md-6 col-sm-12">
                                <h1>Start your journey with our online books</h1>
                                <h3>Our online books are built in partnership with technology leaders and are designed to meet industry demands.</h3>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="item item-third">
                    <div class="caption">
                        <div class="container">
                            <div class="col-md-6 col-sm-12">
                                <h1>Efficient Learning Methods</h1>
                                <h3>Start your journey with our online books</h3>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>





    <!-- books -->
    <section id="books">
        <div class="container">
            <div class="row">

                <div class="col-md-12 col-sm-12">
                    <div class="section-title">
                        <h2>View books Available <small>Upgrade your skills with our books available</small></h2>
                    </div>

                    <div class="owl-carousel owl-theme owl-books">
                        <!--  start  -->
                        <% for (let element of record.book) {%>
                            <div class="col-md-4 col-sm-4">
                                <div class="item">
                                    <div class="books-thumb">
                                        <div class="books-top">
                                            <div class="books-image">
                                                <img src="<%=element.image%>" class="img-responsive" style="width:100%;height:200px;" alt="">
                                            </div>
                                            <div class="books-date">
                                                <span><i class="fa fa-calendar"></i>Date Created: <%= (new Date(element.createdAt)).toString()%></span>
                                                <span><i class="fa fa-clock-o"></i>Book Type: Best Seller</span>
                                            </div>
                                        </div>

                                        <div class="books-detail">
                                            <h3>
                                                <a href="#books">
                                                    <%=element.title%>
                                                </a>
                                            </h3>
                                            <p>
                                                <%=element.description%>
                                            </p>
                                        </div>

                                        <div class="books-info">
                                            <div class="books-author">
                                                <img src="/images/author-image1.jpg" class="img-responsive" alt="">

                                            </div>
                                            <div class="books-price">
                                                <a href="#"><span>book Price:<%=`${element.price} NGN`%></span></a>
                                            </div>
                                            <div class="books-price" style="float: left;">
                                                <span style="align-self: center;"> <button><a href="/book/read/<%=element.id%>">update book</a></button><button><a href="/book/readdelete/<%=element.id%>">delete</a></button></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}%>
                                <!--  end  -->


                    </div>

                </div>
            </div>
    </section>




    <!-- FOOTER -->
